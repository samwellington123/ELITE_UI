{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuoteAndDesignSchemas",
  "definitions": {
    "QuoteLine": {
      "type": "object",
      "required": ["productId", "quantity", "unitPrice"],
      "properties": {
        "productId": { "type": "string" },
        "quantity": { "type": "integer", "minimum": 1 },
        "unitPrice": { "type": "number", "minimum": 0 },
        "versionId": { "type": "string" }
      }
    },
    "Quote": {
      "type": "object",
      "required": ["quoteId", "lines"],
      "properties": {
        "quoteId": { "type": "string" },
        "email": { "type": "string" },
        "lines": { "type": "array", "items": { "$ref": "#/definitions/QuoteLine" } },
        "subtotal": { "type": "number" },
        "taxEstimate": { "type": "number" },
        "shippingEstimate": { "type": "number" },
        "total": { "type": "number" }
      }
    },
    "VersionIndex": {
      "type": "object",
      "required": ["name", "products"],
      "properties": {
        "name": { "type": "string" },
        "createdAt": { "type": "string" },
        "products": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["productId"],
            "properties": { "productId": { "type": "string" }, "updatedAt": { "type": "string" } }
          }
        }
      }
    },
    "DesignManifest": {
      "type": "object",
      "required": ["productId", "logoRef", "placement"],
      "properties": {
        "productId": { "type": "string" },
        "logoRef": { "type": "string" },
        "placement": {
          "type": "object",
          "required": ["name", "px"],
          "properties": {
            "name": { "type": "string" },
            "view": { "type": "string" },
            "px": {
              "type": "object",
              "required": ["x1", "y1", "x2", "y2"],
              "properties": {
                "x1": { "type": "number" },
                "y1": { "type": "number" },
                "x2": { "type": "number" },
                "y2": { "type": "number" },
                "rot": { "type": "number" }
              }
            },
            "pxPerIn": { "type": "number" },
            "printerSpec": {
              "type": "object",
              "properties": {
                "unit": { "type": "string" },
                "pxPerIn": { "type": "number" },
                "artWidthIn": { "type": "number" },
                "artHeightIn": { "type": "number" },
                "offsetXIn": { "type": "number" },
                "offsetYIn": { "type": "number" },
                "rotationDeg": { "type": "integer" },
                "anchor": { "type": "string" },
                "toleranceIn": { "type": "number" }
              }
            }
          }
        },
        "updatedAt": { "type": "string" }
      }
    },
    "ZonesSpec": {
      "type": "object",
      "required": ["styleId", "zones"],
      "properties": {
        "styleId": { "type": "string" },
        "views": { "type": "array", "items": { "type": "string" } },
        "zones": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "rectPx", "physical"],
            "properties": {
              "name": { "type": "string" },
              "view": { "type": "string" },
              "rectPx": {
                "type": "object",
                "properties": { "x": { "type": "number" }, "y": { "type": "number" }, "w": { "type": "number" }, "h": { "type": "number" } }
              },
              "physical": {
                "type": "object",
                "properties": { "w_in": { "type": "number" }, "h_in": { "type": "number" } }
              }
            }
          }
        }
      }
    }
  }
}


